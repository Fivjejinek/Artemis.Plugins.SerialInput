<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:Artemis.Plugins.SerialInput.ViewModels"
             x:Class="Artemis.Plugins.SerialInput.Views.SerialInputConfigurationView"
             x:DataType="viewModels:SerialInputConfigurationViewModel">

  <StackPanel Margin="20" Spacing="10">
    <TextBlock Text="Serial Port Configuration" FontSize="18" FontWeight="Bold" />

    <!-- COM Port -->
    <StackPanel Orientation="Horizontal" Spacing="10">
      <TextBlock Text="COM Port:" Width="150" VerticalAlignment="Center"/>
      <TextBox Text="{Binding ComPort, Mode=TwoWay}" Width="200" Watermark="e.g. COM11"/>
    </StackPanel>

    <!-- Baud Rate -->
    <StackPanel Orientation="Horizontal" Spacing="10">
      <TextBlock Text="Baud Rate:" Width="150" VerticalAlignment="Center"/>
      <NumericUpDown Value="{Binding BaudRate, Mode=TwoWay}" Minimum="1" Maximum="1000000" Increment="600" Width="200"/>
    </StackPanel>

    <!-- Info text -->
    <TextBlock Margin="0,10,0,0"
               Text="Set COM port and baud rate. Plugin will remain idle until both values are valid."
               Opacity="0.7"/>

    <!-- Action buttons -->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
      <Button Content="Save" Command="{Binding SaveChanges}" Width="80"/>
      <Button Content="Cancel" Command="{Binding Cancel}" Width="80"/>
    </StackPanel>
  </StackPanel>
</UserControl>
