<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:Artemis.Plugins.SerialInput.ViewModels"
             x:Class="Artemis.Plugins.SerialInput.Views.SerialInputConfigurationView"
             x:DataType="viewModels:SerialInputConfigurationViewModel">

  <StackPanel Margin="20" Spacing="10">
    <TextBlock Text="Serial Port Configuration" FontSize="18" FontWeight="Bold" />

    <StackPanel Orientation="Horizontal" Spacing="10">
      <TextBlock Text="COM Port:" Width="150" VerticalAlignment="Center"/>
      <TextBox Text="{Binding ComPort.Value}" Width="200"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Spacing="10">
      <TextBlock Text="Baud Rate:" Width="150" VerticalAlignment="Center"/>
      <NumericUpDown Value="{Binding BaudRate.Value}" Minimum="1200" Maximum="115200" Increment="600" Width="200"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Spacing="10">
      <TextBlock Text="Update Rate (s):" Width="150" VerticalAlignment="Center"/>
      <NumericUpDown Value="{Binding UpdateRate.Value}" Minimum="0.1" Maximum="10" Increment="0.1" Width="200"/>
    </StackPanel>
  </StackPanel>
</UserControl>
