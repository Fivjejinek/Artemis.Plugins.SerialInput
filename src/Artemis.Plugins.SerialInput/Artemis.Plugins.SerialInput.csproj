<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!-- Target the runtime that matches the latest Artemis packages -->
    <TargetFramework>net9.0</TargetFramework>
    <Platforms>x64</Platforms>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <!-- Use floating Artemis package versions to pick the latest on restore -->
    <PackageReference Include="ArtemisRGB.Core" Version="*" />
    <PackageReference Include="ArtemisRGB.UI.Shared" Version="*" />

    <!-- Ensure Serilog major version matches Artemis dependencies (avoid NU1605 downgrade) -->
    <PackageReference Include="Serilog" Version="4.*" />

    <!-- Serial port support -->
    <PackageReference Include="System.IO.Ports" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="plugin.json" CopyToOutputDirectory="PreserveNewest" />
    <PackageReference Include="ArtemisRGB.Plugins.BuildTask" Version="2.0.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <!-- Optional: pin exact versions for CI to ensure reproducible builds
  <ItemGroup>
    <PackageReference Include="ArtemisRGB.Core" Version="1.2025.216.4" />
    <PackageReference Include="ArtemisRGB.UI.Shared" Version="1.2025.216.4" />
    <PackageReference Include="Serilog" Version="4.0.0" />
    <PackageReference Include="System.IO.Ports" Version="7.0.0" />
  </ItemGroup>
  -->
</Project>
